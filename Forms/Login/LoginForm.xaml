<Window x:Name="FrmLogin" x:Class="LabBook.Forms.Login.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabBook.Forms.Login"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Logowanie" Height="400" Width="400" FontSize="14" 
        WindowStartupLocation="CenterScreen" Background="#FF04c582" BorderBrush="#FFC3EE2B" KeyDown="FrmLogin_KeyDown">
    <Border Background="#FF2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Logowanie" Foreground="White" 
               HorizontalAlignment="Center" FontSize="24"/>
            <Separator/>
            <Label Content="Login" Foreground="White"/>
            <ComboBox x:Name="CmbUserName" Background="White" Foreground="Black" FontSize="16" 
                      IsEditable="True" FontWeight="Bold" >
                <ComboBox.ToolTip>
                    <ToolTip Background="Yellow">
                        <DockPanel Width="80" Height="14.5" Background="Yellow" >
                            <TextBlock FontSize="12">Podaj login</TextBlock>
                        </DockPanel>
                    </ToolTip>
                </ComboBox.ToolTip>
            </ComboBox>
            <Label Content="Hasło" Foreground="White" />
            <PasswordBox x:Name="TxtPassword" Background="White" Foreground="Black" FontSize="16" FontWeight="Bold" 
                         Height="{Binding ElementName=CmbUserName, Path=ActualHeight}">
                <PasswordBox.ToolTip>
                    <ToolTip Background="Yellow">
                        <DockPanel Width="80" Height="14.5" Background="Yellow" >
                            <TextBlock FontSize="12">Podaj hasło</TextBlock>
                        </DockPanel>
                    </ToolTip>
                </PasswordBox.ToolTip>
            </PasswordBox>
            <Button x:Name="BtnSubbmit" Content="Zaloguj się" Background="#FF545d6a" Foreground="White" 
                    FontSize="18" Margin="80 10" Click="BtnSubbmit_Click" />
            <Separator />
            <Button x:Name="BtnRegister" Content="Rejestracja" Background="#FF446AD3" Foreground="White" 
                    FontSize="16" Margin="160,40,20,20" Click="BtnRegister_Click" />

        </StackPanel>
    </Border>
</Window>
